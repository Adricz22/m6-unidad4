<div class="container-fluid" style="margin-top: 50px">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{ usuario }}! <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar
                    sesión<i class="fa fa-sign-out"></i></a></p>
        </div>
    </div>
    {{!-- fila 2 --}}
    <div>
        <div class="row">
            <div class="col-10">
                <h3>Listado de novedades</h3>
            </div>
            <div class="col-2 text-end">
                <a class="btn btn-success" href=" /admin/novedades/agregar"><i class="fa fa-plus"
                        aria-hidden="true"></i>
                    Nuevo </a>
            </div>
        </div>
        {{!-- fila 3 --}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Título</th>
                            <th scope="col">Novedad</th>
                            <th scope="col">Imagen</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    {{!-- fila 4 --}}
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{cuerpo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end">
                                <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i class=" fas
                                fa-pencil-alt " aria-hidden="true"></i></a>
                                <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i
                                        class="fa fa-trash" aria-hidden="true"></i></a>

                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>