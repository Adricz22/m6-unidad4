<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12 col-sm-7 col-md-6 m-auto">
            <h3>Agregar una novedad</h3>
            <div class="card border-0 shadow">
                <div class="card-body">
                    <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">

                        <div class="input">
                            <textarea class="form-control my-4" id="" aria-label="With textarea" placeholder="Título"
                                name="titulo"></textarea>
                        </div>
                        {{!-- <div class="input">
                            <textarea class="form-control my-4" id="" aria-label="With textarea" placeholder="Subtítulo"
                                name="subtitulo"></textarea>
                        </div> --}}
                        <div class="input">
                            <textarea class="form-control my-4" id="" aria-label="With textarea" placeholder="Cuerpo"
                                name="cuerpo"></textarea>
                        </div>
                        <div>
                            <label>Imagen: <input type="file" class="form-control my-4" name="imagen"></label>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                    {{#if error}}
                    {{message}}
                    {{/if}}

                </div>
            </div>
        </div>
    </div>
</div>